<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.gao.giftapplication.activity.SearchActivity">
<LinearLayout
    android:background="#f9efef"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <EditText
        android:paddingLeft="30dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/search_estate_bar"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/search_edit_shape"
        android:gravity="center_vertical"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:textSize="14sp"/>
    <TextView
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"/>

</LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="4dp"
        android:drawableLeft="@mipmap/ic_seek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大家都在搜"/>

    <LinearLayout
        android:id="@+id/hot_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical"/>

</LinearLayout>
