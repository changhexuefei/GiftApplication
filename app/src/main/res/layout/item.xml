<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/author_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/author_icon"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nickname"
            android:text="111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:text="wwwwww"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/introduction"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/test"
        android:layout_below="@+id/author_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cover_image_url"/>
    <TextView
        android:layout_marginLeft="16dp"
        android:textSize="16sp"

        android:layout_marginTop="4dp"
        android:text="ggggggggggggg"
        android:layout_below="@+id/cover_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        />
    <TextView
        android:layout_marginLeft="16dp"
        android:textSize="12sp"

        android:layout_marginTop="4dp"
        android:layout_below="@+id/title"
        android:text="343434343434"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_introduction"/>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/content_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:layout_marginLeft="16dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目"/>
        <TextView
            android:layout_toRightOf="@+id/tv"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/column_title"/>

        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/like"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes_count"
            />

    </RelativeLayout>


</RelativeLayout>